@{
    ViewData["Title"] = "Sliders";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">
                Lista de Sliders
            </h2>
        </div>
        <div class="col-4 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Crear Nuevo Slider
            </a>
        </div>

        <br />
        <br />
        <table id="tblSliders" class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Estado</th>
                    <th>Imagen</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/slider.js"></script>
}